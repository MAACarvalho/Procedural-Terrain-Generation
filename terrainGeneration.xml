		<scenes>
			<scene name="TerrainScene" type="Scene">
				<geometry name="Terrain" type="GRID" DIVISIONS=1000 LENGTH=20 material="TerrainMat">
				</geometry>
			</scene>
			<scene name="WaterScene" type="Scene">
				<TRANSLATE x=0 y=0 z=0 w=0 />
				<geometry name="Water" type="GRID" DIVISIONS=1 LENGTH=20 material="WaterMat">
				</geometry>
			</scene>
			<scene name="SkyDomeScene" type="Scene">
				<TRANSLATE x=0 y=-1 z=0 />
				<SCALE x=10 y=10 z=10 />				
				<geometry name="SkyDome" type="SPHERE" SLICES=30 STACKS=30 material="SkyMat">
				</geometry>
			</scene>
			<scene name="NoiseScene" type="Scene">
				<geometry name="Noise" type="GRID" DIVISIONS=100 LENGTH=10 material="NoiseMat">
					<ROTATE x=1 y=0 z=0 w=-90/>
				</geometry>
			</scene>
			<scene name="AxisScene" type="Scene">
				<geometry name = "Axis" type = "AXIS"  >
					<SCALE x=50 y=50 z =50 />
				</geometry>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
			<viewport name="NoiseViewport" >
				<ORIGIN x=0.8 y=0.8 />
				<SIZE width=0.2 height=0.2 />
				<CLEAR_COLOR r="0" g="0" b="0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="GodCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 1000/>
				<POSITION x=0 y=2.75 z=-8 />  
				<LOOK_AT_POINT x=0 y=0 z=0 />
			</camera>
			<camera name="GroundCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 1000/>
				<POSITION x=0 y=0.5 z=0 />  
				<VIEW x=0 y=0 z=1.0 />
			</camera>
			<camera name="NoiseCamera" >
				<viewport name="NoiseViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 1000/>
				<POSITION x=0 y=0 z=-8.660254 />  
				<VIEW x=0 y=0 z=1.0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<!-- <DIRECTION x=-2 y=-2 z=-2 /> -->
				<DIRECTION x=-0.38 y=-0.19 z=0.98 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="materials/terrain.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="main" default="true" defaultCamera="GroundCamera">
			<pass class="default" name="GroundView" >
				<viewport name="MainViewport" />
				<!-- <camera name="GroundCamera" /> -->
				<camera name="GodCamera" />
				<scenes>
					<scene name="TerrainScene" />
					<!-- <scene name="WaterScene" /> -->
					<scene name="SkyDomeScene" />
					<scene name="AxisScene" />
				</scenes>
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<!-- <map toMaterial="*">
						<shader fromMaterial="SkyBox" fromLibrary="TerrainLib" />
						<state name="cullFront" fromLibrary="TerrainLib" />
					</map> -->
				</injectionMaps>
				<materialMaps>
					<map fromMaterial="TerrainMat" toMaterial="Terrain" toLibrary="TerrainLib" />
					<map fromMaterial="WaterMat" toMaterial="Water" toLibrary="TerrainLib" />
					<map fromMaterial="SkyMat" toMaterial="SkyDome" toLibrary="TerrainLib" />
				</materialMaps>
			</pass>
			<pass class="default" name="NoiseView" >
				<viewport name="NoiseViewport" />
				<camera name="NoiseCamera" />
				<scenes>
					<scene name="NoiseScene" />
				</scenes>
				<materialMaps>
					<map fromMaterial="NoiseMat" toMaterial="Noise" toLibrary="TerrainLib" />
				</materialMaps>
			</pass>
		</pipeline>
	</pipelines>

	<interface>
		<window label="Parameters">
			<var label="Grid Length" type="GRID" context="TerrainScene::Terrain" component="LENGTH"/>
			<var label="Grid Divisions" type="GRID" context="TerrainScene::Terrain" component="DIVISIONS"/>
			
			<var label="Stacks" type="SPHERE" context="SkyDomeScene::SkyDome" component="STACKS" />
			<var label="Slices" type="SPHERE" context="SkyDomeScene::SkyDome" component="SLICES" />
			<!-- <var label="Slices" type="SPHERE" context="CubeLand::Sphere" component="SLICES" /> -->

			<var label="Water Height" type="RENDERER" context="CURRENT" component="WATER_HEIGHT" def="min=-3 max=3 step=0.01"/>
			<!-- <var label="Water Grid Pos" type="SCENE_OBJECT" context="WaterScene::Water" component="TRANSLATE" def="min=-1 max=1 step=0.1"/> -->
			
			<var label="Frequency" type="RENDERER" context="CURRENT" component="FREQUENCY" def="min=0.1 max=5 step=0.1"/>
			<var label="Amplitude" type="RENDERER" context="CURRENT" component="AMPLITUDE" def="min=0 max=5 step=0.1"/>
			<var label="Power" type="RENDERER" context="CURRENT" component="POWER" def="min=0.1 max=5 step=0.1"/>
			<var label="Persistance" type="RENDERER" context="CURRENT" component="PERSISTANCE" def="min=0 max=5 step=0.1"/>
			<var label="Lacunarity" type="RENDERER" context="CURRENT" component="LACUNARITY" def="min=0 max=5 step=0.1"/>
			<var label="Octaves" type="RENDERER" context="CURRENT" component="OCTAVES" def="min=1 max=20 step=1"/>
			<var label="Origin" type="RENDERER" context="CURRENT" component="ORIGIN" />

			<var label="Color < 1.0" type="RENDERER" context="CURRENT" component="TERRAIN_COL_10" mode="COLOR"/>
			<var label="Color < 0.8" type="RENDERER" context="CURRENT" component="TERRAIN_COL_8" mode="COLOR"/>
			<var label="Color < 0.6" type="RENDERER" context="CURRENT" component="TERRAIN_COL_6" mode="COLOR"/>
			<var label="Color < 0.4" type="RENDERER" context="CURRENT" component="TERRAIN_COL_4" mode="COLOR"/>
			<var label="Color < 0.2" type="RENDERER" context="CURRENT" component="TERRAIN_COL_2" mode="COLOR"/>
			<var label="Color < 0.0" type="RENDERER" context="CURRENT" component="WATER_COL_0" mode="COLOR"/>
			<var label="Color < -0.2" type="RENDERER" context="CURRENT" component="WATER_COL_2" mode="COLOR"/>
			<var label="Color < -0.4" type="RENDERER" context="CURRENT" component="WATER_COL_4" mode="COLOR"/>
			<var label="Color < -0.6" type="RENDERER" context="CURRENT" component="WATER_COL_6" mode="COLOR"/>
			<var label="Color < -0.8" type="RENDERER" context="CURRENT" component="WATER_COL_8" mode="COLOR"/>
			
		</window>
	</interface>
</project>