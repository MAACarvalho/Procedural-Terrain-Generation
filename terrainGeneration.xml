<?xml version="1.0" ?>
<project name="Terrain Generation" >
	<assets>
		<attributes>
			<attribute name="FREQUENCY" type="RENDERER" 
						data="FLOAT" value="1.0" />
			
			<attribute name="AMPLITUDE" type="RENDERER" 
						data="FLOAT" value="0.2" />
			
			<attribute name="OCTAVES" type="RENDERER" 
						data="INT" value="1" />

			<attribute name="TERRAIN_COL_10" type="RENDERER" 
						data="VEC4" x="1.00000" y="0.98039" z="0.98039" w="1"/>
			<attribute name="TERRAIN_COL_8" type="RENDERER" 
						data="VEC4" x="0.23529" y="0.14510" z="0.08235" w="1"/>
			<attribute name="TERRAIN_COL_6" type="RENDERER" 
						data="VEC4" x="0.13725" y="0.56471" z="0.30980" w="1"/>
			<attribute name="TERRAIN_COL_4" type="RENDERER" 
						data="VEC4" x="0.11765" y="0.76863" z="0.30980" w="1"/>
			<attribute name="TERRAIN_COL_2" type="RENDERER" 
						data="VEC4" x="0.93333" y="0.83922" z="0.68627" w="1"/>
			<attribute name="WATER_COL_0" type="RENDERER" 
						data="VEC4" x="0.31765" y="0.63529" z="0.83529" w="1"/>
			<attribute name="WATER_COL_2" type="RENDERER" 
						data="VEC4" x="0.10980" y="0.43922" z="0.78431" w="1"/>
			<attribute name="WATER_COL_4" type="RENDERER" 
						data="VEC4" x="0.00784" y="0.18431" z="0.55686" w="1"/>
			<attribute name="WATER_COL_6" type="RENDERER" 
						data="VEC4" x="0.011765" y="0.04706" z="0.32941" w="1"/>
			<attribute name="WATER_COL_8" type="RENDERER" 
						data="VEC4" x="0.00392" y="0.00392" z="0.24706" w="1"/>
		</attributes>
		<scenes>
			<scene name="TerrainScene" type="Scene">
				<geometry name="Terrain" type="GRID" DIVISIONS=200 LENGTH=5 material="TerrainMat">
				</geometry>
			</scene>
			<!-- <scene name="SphereScene" type="Scene">
				<geometry name="Sphere" type="SPHERE" SLICES=20 STACKS=20>
					<SCALE x=0.1 y=0.1 z=0.1 />
					<TRANSLATE x=0 y=0 z=2.5/>
				</geometry>
			</scene> -->
			<scene name="NoiseScene" type="Scene">
				<geometry name="Noise" type="GRID" DIVISIONS=200 LENGTH=10 material="NoiseMat">
					<ROTATE x=1 y=0 z=0 w=-90/>
				</geometry>
			</scene>
			<scene name="AxisScene" type="Scene">
				<geometry name = "Axis" type = "AXIS"  >
					<SCALE x=5 y=5 z =5 />
				</geometry>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
			<viewport name="NoiseViewport" >
				<ORIGIN x=0.8 y=0.8 />
				<SIZE width=0.2 height=0.2 />
				<CLEAR_COLOR r="0" g="0" b="0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="GroundCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 1000/>
				<POSITION x=0 y=0.5 z=0 />  
				<VIEW x=0 y=0 z=1.0 />
			</camera>
			<camera name="NoiseCamera" >
				<viewport name="NoiseViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 1000/>
				<POSITION x=0 y=0 z=-8.660254 />  
				<VIEW x=0 y=0 z=1.0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-2 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="materials/terrain.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="main" default="true" defaultCamera="GroundCamera">
			<pass class="default" name="GroundView" >
				<viewport name="MainViewport" />
				<camera name="GroundCamera" />
				<scenes>
					<scene name="TerrainScene" />
					<!-- <scene name="SphereScene" /> -->
					<!-- <scene name="NoiseScene" /> -->
					<scene name="AxisScene" />
				</scenes>
				<lights>
					<light name="Sun" />
				</lights>
				<!-- <injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial="textured" fromLibrary="Texture" />
						<state name="cullFront" fromLibrary="Texture" />
					</map>
				</injectionMaps> -->
				<materialMaps>
					<map fromMaterial="TerrainMat" toMaterial="Terrain" toLibrary="TerrainLib" />
				</materialMaps>
			</pass>
			<pass class="default" name="NoiseView" >
				<viewport name="NoiseViewport" />
				<camera name="NoiseCamera" />
				<scenes>
					<scene name="NoiseScene" />
				</scenes>
				<materialMaps>
					<map fromMaterial="NoiseMat" toMaterial="Noise" toLibrary="TerrainLib" />
				</materialMaps>
			</pass>
		</pipeline>
	</pipelines>

	<interface>
		<window label="Parameters">
			<!-- <var label="Grid Length" type="GRID" context="TerrainScene::Terrain" component="LENGTH"/>
			<var label="Grid Divisions" type="GRID" context="TerrainScene::Terrain" component="DIVISIONS"/> -->
			<var label="Frequency" type="RENDERER" context="CURRENT" component="FREQUENCY" def="min=0 max=5 step=0.1"/>
			<var label="Amplitude" type="RENDERER" context="CURRENT" component="AMPLITUDE" def="min=0 max=5 step=0.1"/>
			<var label="Octaves" type="RENDERER" context="CURRENT" component="OCTAVES" def="min=1 max=8 step=1"/>
			<var label="Color < 1.0" type="RENDERER" context="CURRENT" component="TERRAIN_COL_10" mode="COLOR"/>
			<var label="Color < 0.8" type="RENDERER" context="CURRENT" component="TERRAIN_COL_8" mode="COLOR"/>
			<var label="Color < 0.6" type="RENDERER" context="CURRENT" component="TERRAIN_COL_6" mode="COLOR"/>
			<var label="Color < 0.4" type="RENDERER" context="CURRENT" component="TERRAIN_COL_4" mode="COLOR"/>
			<var label="Color < 0.2" type="RENDERER" context="CURRENT" component="TERRAIN_COL_2" mode="COLOR"/>
			<var label="Color < 0.0" type="RENDERER" context="CURRENT" component="WATER_COL_0" mode="COLOR"/>
			<var label="Color < -0.2" type="RENDERER" context="CURRENT" component="WATER_COL_2" mode="COLOR"/>
			<var label="Color < -0.4" type="RENDERER" context="CURRENT" component="WATER_COL_4" mode="COLOR"/>
			<var label="Color < -0.6" type="RENDERER" context="CURRENT" component="WATER_COL_6" mode="COLOR"/>
			<var label="Color < -0.8" type="RENDERER" context="CURRENT" component="WATER_COL_8" mode="COLOR"/>
			
			
		</window>
	</interface>
</project>