<?xml version="1.0" ?>
<project name="Tessellation Partition" width="512" height="512">
	<assets>
		<attributes>
			<attribute name="tessellation" data="FLOAT" type="RENDERER" value=16 />
			<attribute name="tessellationRatio" data="FLOAT" type="RENDERER" value=0.5 />
		</attributes>
		
		<scenes>
			<scene name="Square" type="OctreeByMat">
				<file  name="models/square.patch"/> 
					<TRANSLATE x = 0 y = 0 z = 0 />
				
				<!-- <geometry name="Terrain" type="GRID" DIVISIONS=1 LENGTH=20 material="Square"/>
				<ROTATE x = 1 y = 0 z = 0 w = 90 /> -->
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1 FAR=100.0 />
				<POSITION x=0 y=0 z=5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
		</cameras>
		
		<materialLibs>
			<materialLib filename="tessellation.mlib"/>
		</materialLibs>
		
	</assets>
	
	<pipelines>
		<pipeline name="Quad and Tri" default="true">
			<pass class="default" name="passQuad">
				<scenes instances=25>
					<scene name="Square" />
				</scenes>
				<camera name="MainCamera" />
				<materialMaps>
					<map fromMaterial="*" toLibrary="tessellation" toMaterial="tessQuad" />
				</materialMaps>
				
			</pass>
		</pipeline>
	</pipelines>
	
	<interface>
		<window label="Main Window">
			
			<var label="tessellation" type="RENDERER" context="CURRENT" component="tessellation" 
				def="min=1 max=64 step=1"/>
			<var label="tessellationRatio" type="RENDERER" context="CURRENT" component="tessellationRatio" 
				def="min=0.01 max=1.0 step=0.1"/>
		</window>
	</interface>
</project>